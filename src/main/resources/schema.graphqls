type Post {
    id: ID!
    title: String!
    text: String!
    category: String
}

type Author {
    id: ID!
    name: String!
    thumbnail: String
    posts: [Post]
}

# The Root Query for the application
type Query {
    recentPosts(count: Int, offset: Int): [Post]!
    authors : [Author]!
    author(authorId:String) : Author!
}
